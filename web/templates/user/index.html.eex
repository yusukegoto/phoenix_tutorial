<h1>All users</h1>

<%= paginate(@conn, &user_path/3, @page_info) %>

<ul class="users">
  <%= for user <- @users do %>
    <li>
      <%= gravator_for(user.email) %>
      <%= link user.name, to: user_path(@conn, :show, user) %>
    </li>
  <% end %>
</ul>

<%= paginate(@conn, &user_path/3, @page_info) %>
